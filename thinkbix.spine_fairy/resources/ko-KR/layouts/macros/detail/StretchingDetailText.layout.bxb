layout-macro-def(StretchingDetailText) {
  params {
    param (description) {
      type (Description)
      min (Required)
      max (Many)
    }
  }

  content {
    section {  // this macro returns a "section"
      content {
        paragraph {
          value ("#{value(description)}")
          style (Detail_L)
        }
      }
    }
  }
}