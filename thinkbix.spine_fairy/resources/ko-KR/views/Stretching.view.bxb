result-view{
  match : StretchingSel(result)

  message{   
    if(size(result)>1){
      template ("질문하신 스트레칭에 대한 #{size(result)}개의 결과입니다.")
    }else-if (size(result)==1){
      template("#{value(result.title)}을 시작할게요.")
    }else{
      template (" "){
        speech ("이런 스트레칭은 어떠세요?")
      }
    }
  }
  
  render{
    layout{
      if(size(result)>1){
        section{
          content{
            for-each (result){
              as (item){
                layout-macro (StretchingContent){
                  param (stretchingSel){
                    expression (item)
                  }
                }
              }
              
            }
          }
        }
      } else-if(size(result)==1){ 
        section{
          content{
            
            compound-card{
              content{
                layout-macro (StretchingPoint){
                  param (stretchingSel){
                    expression (result)
                  }
                }
              }
                
            }
            compound-card{
              content{
                layout-macro (StretchingCheck){
                  param(stretchingSel){
                    expression (result)
                  }
                }
              }
            }
            
            compound-card{
              content{
                layout-macro (StretchingRepetition){
                  param(stretchingSel){
                    expression (result)
                  }
                }
              }
            }
          }
              
            
      }
      
        
      for-each (result.processList){
        as(item){
          layout-macro (StretchingDetailImage){
            param(processList){
              expression (item)
            }
          }

          for-each (item.description){
            as(desc){
              layout-macro (StretchingDetailText){
                param(description){
                  expression (desc)
                }
              }     
            }
          }
          
        }
      }
    }
    else{
      section{
        content{
          cell-area{
            slot2{
              content{
                primary{
                  template ("찾으시는 결과가 없어요 😂")
                }
              }
            }
          }
          cell-area{
            slot2{
              content{
                primary{
                  template ("이런 스트레칭은 어떠세요?")
                }
              }
            }
          }
        }
      }
    }

    } 
  }
refresh{
  spec{
    delay-seconds (3)
    with-request{
      if (size(result)==0){
        intent{
          goal{StretchingRanking}
        }
      }
    }
  }
}


  conversation-drivers{
    if(size(result)>1){
      conversation-driver{
        template-macro (PartRecommend)
      }
      conversation-driver{
        template-macro (PlaceRecommend)
      }
      conversation-driver{
        template-macro (SituationRecommend)
      }
    }else-if(size(result)==1){
      conversation-driver{
        template ("영상으로 보여줘")
      }

      conversation-driver{
        template ("운동 시작")
      } 
    }

  }
}